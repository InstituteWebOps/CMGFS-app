                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Comment"
                    android:id="@+id/com7"
                    android:textSize="14sp"
                    android:cursorVisible="false"
                    android:layout_below="@+id/cus_col7"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cus_col8"
                    android:text="How is your life"
                    android:textSize="14sp"/>

                <RatingBar
                    android:id="@+id/ratingBar8"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="0dp"
                    android:focusable="true"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="1"
                    android:theme="@style/RatingBar" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Comment"
                    android:id="@+id/com8"
                    android:textSize="14sp"
                    android:cursorVisible="false"
                    android:layout_below="@+id/cus_col8"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:paddingTop="6dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cus_col9"
                    android:text="How is your life"
                    android:textSize="17sp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Write"
                    android:id="@+id/com9"
                    android:textSize="14sp"
                    android:cursorVisible="false"
                    android:layout_below="@+id/cus_col9"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Members"
                    android:textSize="16sp"
                    android:id="@+id/members"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/members_name"
                    android:textSize="14sp"
                    android:cursorVisible="false"
                    android:layout_below="@+id/members"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="16sp"
                    android:id="@+id/phone"
                    android:layout_below="@+id/members_name"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone_no"
                    android:textSize="14sp"
                    android:cursorVisible="false"
                    android:layout_below="@+id/phone"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phone_no"
                    android:id="@+id/t1"
                    android:paddingTop="40dp"
                    android:text="For online feedback and grievance redress:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t1"
                    android:textColor="@android:color/holo_red_dark"
                    android:text=" https://www.facebook.com/CMGFSIITM"
                    android:id="@+id/fb"/>

            </RelativeLayout>
            <Button
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:layout_marginTop="8dp"
                android:id="@+id/submit"
                android:background="@android:color/holo_orange_light"/>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
